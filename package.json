{
	"name": "smashswg-launcher",
	"version": "1.1.2",
	"description": "Launcher and Patcher for Smash Wars Galaxies: Legacy Reborn",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"build": "build --win --ia32",
		"deploy": "build --win --ia32 --publish=always"
	},
	"repository": {
		"type": "git",
		"url": "git+hhttps://github.com/Smash-Wars-Galaxies/SmashWars-Launcher-Live.git"
	},
	"keywords": [
		"launcher",
		"swgemu"
	],
	"author": "InfiniteAxis at Smash Wars Galaxies",
	"license": "CC0-1.0",
	"bugs": {
		"url": "https://github.com/Smash-Wars-Galaxies/SmashWars-Launcher-Live/issues"
	},
	"homepage": "https://github.com/Smash-Wars-Galaxies/SmashWars-Launcher-Live#readme",
	"devDependencies": {
		"dotenv": "^16.4.5",
		"electron": "~1.6.2",
		"electron-builder": "^19.13.0"
	},
	"dependencies": {
		"adm-zip": "^0.4.7",
		"electron-is-dev": "^0.2.0",
		"electron-log": "^2.2.7",
		"electron-updater": "^2.18.2",
		"follow-redirects": "^1.2.4",
		"random-access-file": "^1.8.1",
		"request": "^2.81.0"
	},
	"build": {
		"productName": "Smash Wars Galaxies Launcher",
		"win": {
			"icon": "./img/logo_icon.ico",
			"target": [
				"nsis",
				"zip"
			]
		},
		"extraResources": [
			{
				"from": "profcalc",
				"to": "profcalc",
				"filter": [
					"**/*"
				]
			}
		],
		"nsis": {
			"perMachine": true,
			"oneClick":false,
			"allowToChangeInstallationDirectory": true
		}
	}
}